# Provide connection components via environment variables before running tests.
# These defaults assume a local PostgreSQL instance is available. Override as needed.
TEST_DB_SCHEME=postgresql
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=rust_basic_api_test
SERVER_PORT=3100
RUST_LOG=debug
DB_MAX_CONNECTIONS=5
DB_MIN_CONNECTIONS=1
DB_ACQUIRE_TIMEOUT_SECONDS=5
DB_IDLE_TIMEOUT_SECONDS=300
DB_MAX_LIFETIME_SECONDS=1200
DB_CONNECT_TIMEOUT_SECONDS=5
